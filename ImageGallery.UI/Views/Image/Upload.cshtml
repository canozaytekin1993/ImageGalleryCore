@model ImageGallery.UI.Models.UploadImageModel

<div class="container body-content">
    <div class="row upload-container">
        <div class="upload-from drop-shadow">
            <form asp-action="UploadNewImage" method="post" enctype="multipart/form-data" id="upload-form">
                <div class="form-group">
                    <label asp-for="Title"></label>
                    <input type="text" asp-for="Title" placeholder="Title" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Tags"></label>
                    <input type="text" asp-for="Tags" placeholder="Tags" class="form-control" />
                </div>
                <div>
                    <label class="btn btn-outline-warning">
                        Browse for Image
                        <input type="file" name="file" style="display: none" />
                    </label>
                </div>
                <div>
                    <button type="submit" id="btn-upload" class="btn btn-info">
                        Submit
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>